package rewardsNStats;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.Serializable;
import java.util.ArrayList;
import java.util.Scanner;

public class Stats implements Serializable {
private static ArrayList<String> correct;
private static ArrayList<String> faulted;
private static ArrayList<String> failed;


public static int getCorrectSize(){
	return correct.size();
}

public static int getFaultedSize(){
	return faulted.size();
}

public static int getFailedSize(){
	return failed.size();
}

public static void addtoCorrect(String a){
	correct.add(a);
}

public static void addtoFaulted(String b){
	faulted.add(b);
}

public static void addtoFailed(String c){
	failed.add(c);
}

public static ArrayList<String> getCorrectWords(){
	return correct;
}

public static ArrayList<String> getFaultedWords(){
	return faulted;
}

public static ArrayList<String> getFailedWords(){
	return failed;
}

public static void clearStats(){
	correct.clear();
	faulted.clear();
	failed.clear();
}

private static void writeToObject(){
	
}


private static void readFromObject(){
	
}

}
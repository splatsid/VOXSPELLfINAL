package rewardsNStats;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.Serializable;
import java.util.ArrayList;
import java.util.Scanner;

public class Stats implements Serializable {
private static ArrayList<String> correct;
private static ArrayList<String> faulted;
private static ArrayList<String> failed;

	public static ArrayList<Integer> readStats() throws FileNotFoundException {
		return(new ArrayList<Integer>.add(correct.size(),faulted.size(),failed.size()));


	}

public static void addtoCorrect(String a){
	correct.add(a);
}

public static void addtoFaulted(String b){
	faulted.add(b);
}

public static void addtoFailed(String c){
	failed.add(c);
}
}